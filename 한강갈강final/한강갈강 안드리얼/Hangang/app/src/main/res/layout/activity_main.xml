<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.inniiis.hangang.MainActivity">

    <EditText
        android:id="@+id/loginid"
        android:hint="ID"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:backgroundTint="#ffffff"
        android:layout_above="@+id/loginpw"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/loginpw"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:backgroundTint="#ffffff"
        android:layout_marginBottom="77dp"
        android:layout_above="@+id/login"
        android:layout_alignStart="@+id/loginid" />

    <Button
        android:id="@+id/register"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:onClick="btregister"
        android:background="@drawable/btregister"
        android:layout_marginBottom="89dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/nologin"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:onClick="btnologin"
        android:background="@drawable/btnologin"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/btlogin"
        android:onClick="btlogin"
        android:layout_above="@+id/register"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
