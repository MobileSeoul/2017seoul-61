<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register2"
    tools:context="com.example.inniiis.hangang.MainActivity">

    <EditText
        android:id="@+id/id"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:hint="ID"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_above="@+id/name"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:hint="이름"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_above="@+id/password"
        android:layout_alignStart="@+id/id" />


    <EditText
        android:id="@+id/password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:hint="비밀번호"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/id"/>

    <EditText
        android:id="@+id/password2"
        android:layout_width="150dp"
        android:hint="비밀번호 확인"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:backgroundTint="#ffffff"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:hint="연락처"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/password2"
        android:layout_alignStart="@+id/password2" />

    <Button
        android:id="@+id/register"
        android:onClick="btregister"
        android:layout_width="100dp"
        android:layout_height="35dp"

        android:background="@drawable/btregister"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/back"
        android:onClick="btback"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@drawable/btback"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/register"
        android:layout_alignStart="@+id/register" />
</RelativeLayout>
